<%- include('../partials/header') %>
<section>
  <h1>Goals Page</h1>
  <table>
    <thead>
      <tr>
        <th>Progress</th>
        <th>Goal</th>
        <th>Priority</th>
        <th>Difficulty#</th>
        <th>Days to complete</th>
        <th>Categories</th>
        <th>milestones</th>
      </tr>
    </thead>
    </thead>
    <tbody>
      <% goals.forEach(function(g) { %>
      <tr class="table-row">
        <td><%= g.progress %></td>
        <td><%= g.goalName %></td>
        <td><%= g.priority %></td>
        <td><%= g.difficulty %></td>
        <td><%= g.daysToComplete %></td>
        <td><%= g.progress %></td>
        <td><%= g.categories %></td>
        <td><%= g.milestones %></td>
        <td>
          <form action="/goals/<%= g._id %>?_method=DELETE" method="POST">
            <button type="submit">del</button>
          </form>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</section>
<%- include('../partials/footer') %>