<%- include('../partials/header') %>
<section>
  <form action="/goals" method="POST">
    <div>
      <label>What is your goal?
        <input type="text" name="goalName" />
      </label>
    </div>
    <div>
      <label>Priority:
        <input type="range" id="priority-slider" name="priority" min="1" max="3" value="2" step="1" />
      </label>
    </div>
    <div>
      <label>Difficulty:
        <input type="range" id="difficulty-slider" name="difficulty" min="1" max="5" value="3" step="1" />
      </label>
    </div>
    <div>
      <label>How many days do you need?
        <input type="number" name="daysToComplete" />
      </label>
    </div>
    <div>
      <p>Category</p>
      <input type="checkbox" id="educational" name="category" value="Educational" />
      <label for="educational">Educational</label>
      <input type="checkbox" id="health" name="category" value="Health" />
      <label for="health">Health</label>
      <input type="checkbox" id="relationship" name="category" value="Relationship" />
      <label for="relationship">Relationship</label>
      <input type="checkbox" id="personal" name="category" value="Personal" />
      <label for="personal">Personal</label>
      <input type="checkbox" id="career" name="category" value="Career" />
      <label for="career">Career</label>
      <input type="checkbox" id="financial" name="category" value="Financial" />
      <label for="financial">Financial</label>
      <input type="checkbox" id="spiritual" name="category" value="Spiritual" />
      <label for="spiritual">Spiritual</label>
      <input type="checkbox" id="psychological" name="category" value="Psychological" />
      <label for="psychological">Psychological</label>
      <input type="checkbox" id="external" name="category" value="External" />
      <label for="external">External</label>
      <input type="checkbox" id="experiential" name="category" value="Experiential" />
      <label for="experiential">Experiential</label>
    </div>
    <div>
      <input type="submit" value="Add Goal" />
    </div>
  </form>
</section>
<%- include('../partials/footer') %>