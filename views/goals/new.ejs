<%- include('../partials/header') %>
<section>
  <form action="/goals" method="POST">
    <div>
      <label>What is your goal?
        <input type="text" name="goalName" />
      </label>
    </div>
    <div>
      <label>Priority:
        <input type="range" id="priority-slider" name="priority" min="1" max="3" value="2" step="1" />
      </label>
    </div>
    <div>
      <label>Difficulty:
        <input type="range" id="difficulty-slider" name="difficulty" min="1" max="5" value="3" step="1" />
      </label>
    </div>
    <div>
      <label>How many days do you need?
        <input type="number" name="daysToComplete" />
      </label>
    </div>
    <div>
      <p>Category</p>
      <% category.forEach(function(c) { %>
      <form>
        <input type="checkbox" id="<%= c %>" name="complete" value="true" />
        <label for="<%= c %>"><%= c %></label>
      </form>
      <% }) %>
    </div>
    <div>
      <input type="submit" value="Add Goal" />
    </div>
  </form>
</section>
<%- include('../partials/footer') %>