<%- include('../partials/sidebar') %>
<h1>Edit <%= goal.goalName %></h1>
<section>
    <form action="/goals/<%= goal._id %>?_method=PUT" method="POST"">
    <div>
        <label>Goal Name:
            <input type="text" name="goalName" value="<%= goal.goalname %>" placeholder="<%= goal.goalname %>"/>
        </label>
    </div>
    <div>
        <label>Priority:
            <input type="range" id="priority-slider" name="priority" min="1" max="3" value="<%= goal.priority %>" step="1" placeholder="<%= goal.priority %>"/>
        </label>
    </div>
    <div>
        <label>Difficulty:
            <input type="range" id="difficulty-slider" name="difficulty" min="1" max="5" value="<%= goal.difficulty %> placeholder="<%= goal.difficulty %>"
                step="1" />
        </label>
    </div>
    <div>
        <label>How many days do you need?
            <input type="number" name="daysToComplete" value="<%= goal.daysToComplete %>" placeholder="<%= goal.daysToComplete %>"/>
        </label>
    </div>
    <div>
        <p>Category</p>
        <% category.forEach(function(c) { %>
            <input type="checkbox" id="<%= c %>" name="categories" value="<%= c %>" <%= goal.categories.includes(c) ? "checked" : "" %> /> 
            <label for="<%= c %>"><%= c %></label>
          <% }) %>
    </div>
    <div>
        <input type="submit" value="Update Goal" />
    </div>
    </form>
</section>
<%- include('../partials/footer') %>