<%- include('../partials/header') %>
<h1>Edit Goal</h1>
<h2>Goal Name: <%= goal.goalName %></h2>
<section>
    <form action="/goals/<%= goal._id %>?_method=PUT" method="POST"">
    <div>
        <label>Priority:
            <input type="range" id="priority-slider" name="priority" min="1" max="3" value="<%= goal.priority %>" step="1" />
        </label>
    </div>
    <div>
        <label>Difficulty:
            <input type="range" id="difficulty-slider" name="difficulty" min="1" max="5" value="<%= goal.difficulty %>"
                step="1" />
        </label>
    </div>
    <div>
        <label>How many days do you need?
            <input type="number" name="daysToComplete" value="<%= goal.daysToComplete %>" />
        </label>
    </div>
    <div>
        <p>Category</p>
        <input type="checkbox" id="educational" name="categories" value="Educational"
            <%= goal.categories.includes('Educational') ? "checked" : ""%> />
        <label for="educational">Educational</label>
        <input type="checkbox" id="health" name="categories" value="Health"
            <%= goal.categories.includes('Health') ? "checked" : ""%> />
        <label for="health">Health</label>
        <input type="checkbox" id="relationship" name="categories" value="Relationship"
            <%= goal.categories.includes('Relationship') ? "checked" : ""%> />
        <label for="relationship">Relationship</label>
        <input type="checkbox" id="personal" name="categories" value="Personal"
            <%= goal.categories.includes('Personal') ? "checked" : ""%> />
        <label for="personal">Personal</label>
        <input type="checkbox" id="career" name="categories" value="Career"
            <%= goal.categories.includes('Career') ? "checked" : ""%> />
        <label for="career">Career</label>
        <input type="checkbox" id="financial" name="categories" value="Financial"
            <%= goal.categories.includes('Financial') ? "checked" : ""%> />
        <label for="financial">Financial</label>
        <input type="checkbox" id="spiritual" name="categories" value="Spiritual"
            <%= goal.categories.includes('Spiritual') ? "checked" : ""%> />
        <label for="spiritual">Spiritual</label>
        <input type="checkbox" id="psychological" name="categories" value="Psychological"
            <%= goal.categories.includes('Psychological') ? "checked" : ""%> />
        <label for="psychological">Psychological</label>
        <input type="checkbox" id="external" name="categories" value="External"
            <%= goal.categories.includes('External') ? "checked" : ""%> />
        <label for="external">External</label>
        <input type="checkbox" id="experiential" name="categories" value="Experiential"
            <%= goal.categories.includes('Experiential') ? "checked" : ""%> />
        <label for="experiential">Experiential</label>
    </div>
    <div>
        <input type="submit" value="Update Goal" />
    </div>
    </form>
</section>
<%- include('../partials/footer') %>